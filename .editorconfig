# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true


[*]
# Unix-style newlines with a newline ending every file
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true


[*.{js,json,html,md,ps1,py,txt}]
indent_size = 4
indent_style = space

[{*.groovy,Jenkinsfile}]
indent_size = 4
indent_style = space

[*.{sh,bash,zsh}]
indent_size = 4
indent_style = space

[{Makefile}]
tab_width = 8

[*.y{,a}ml]
indent_size = 2
